source $HOME/.screenrc

screen -t pgc 0
stuff "psql new-lair\012"
screen -t redis 1
stuff "redis-cli\012"
screen -t resque 2
stuff "LAIR_LOG_TO_STDOUT=1 TERM_CHILD=1 QUEUE=* rake resque:work\012"
screen -t server 3
stuff "bundle exec rails server\012"
screen -t vim 4
stuff "\${PROJECT_EDITOR-\$EDITOR}\012"
screen -t zsh 5
screen -t console 6
stuff "bundle exec rails console\012"
screen -t jshint 7
stuff "grunt watch:jshint\012"
select vim
