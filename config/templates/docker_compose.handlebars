# Nginx web server.
web:
  image: nginx
  command: nginx
  links:
    - app
  ports:
    - "443:443"
  volumes:
    - "{{ release_path }}/nginx.conf:/etc/nginx/nginx.conf:ro"
    - "{{ release_path }}/public:/var/lib/lair/public"
    - "/web/certificates/{{ LAIR_NGINX_SSL_DOMAIN }}:/web/certificates/{{ LAIR_NGINX_SSL_DOMAIN }}"
  restart: always

# Application in production mode.
# The application will not serve assets.
app:
  image: alphahydrae/lair
  links:
    - db
    - cache
  volumes:
    - "{{ release_path }}/public:/usr/src/app/public"
  env_file:
    - .env
  environment:
    LAIR_LOG_TO_STDOUT: "1"
  restart: always

# Background job processing task.
job:
  image: alphahydrae/lair
  command: rake resque:work
  links:
    - db
    - cache
  env_file:
    - .env
  environment:
    QUEUE: "*"
    INTERVAL: "2"
    TERM_CHILD: "1"
    LAIR_LOG_TO_STDOUT: "1"
  restart: always

# PostgreSQL database.
db:
  image: postgres:9.4
  volumes:
    - "{{ release_path }}/db-init-scripts:/docker-entrypoint-initdb.d"
    - "{{ deploy_to }}/postgresql/data:/var/lib/postgresql/data"
  environment:
    POSTGRES_PASSWORD: {{ LAIR_POSTGRES_PASSWORD }}
    LAIR_DATABASE_NAME: {{ LAIR_DATABASE_NAME }}
    LAIR_DATABASE_USERNAME: {{ LAIR_DATABASE_USERNAME }}
    LAIR_DATABASE_PASSWORD: {{ LAIR_DATABASE_PASSWORD }}
  restart: always

# Redis in-memory database.
cache:
  image: redis:2.8
  command: redis-server --appendonly yes
  volumes:
    - "{{ deploy_to }}/redis/data:/data"
  restart: always

# Pre-compile application assets.
# This is meant to be run as a one-off task (with "run" instead of "up").
task:
  image: alphahydrae/lair
  command: rake -T
  links:
    - db
    - cache
  volumes:
    - "{{ release_path }}/public:/usr/src/app/public"
    - "{{ release_path }}/tmp:/usr/src/app/tmp"
  env_file:
    - .env
  restart: no
